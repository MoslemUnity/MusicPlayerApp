<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    tools:openDrawer="left"
    android:background="@color/white"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.Home_activity">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        app:headerLayout="@layout/layout_header"
        app:menu="@menu/menu_drawer"
        android:layout_gravity="left"
        android:layout_width="300dp"
        android:layout_height="match_parent"/>
    
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:background="@drawable/header_gradiant"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:layout_marginTop="25dp"
                app:layout_scrollFlags="scroll|enterAlways"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <ImageView
                    android:id="@+id/imageView_menu"
                    app:srcCompat="@drawable/hamburger"
                    app:tint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:text="Main Page"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:layout_toRightOf="@id/imageView_menu"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/imageView_search"
                    app:srcCompat="@drawable/search"
                    android:layout_alignParentRight="true"
                    app:tint="@color/white"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>


            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
            android:id="@+id/fab_add"
            android:text="Add music"
            android:textColor="@color/white"
            app:icon="@drawable/outline_add_24"
            app:iconTint="@color/white"
            android:layout_gravity="bottom|center_horizontal"
            app:backgroundTint="@color/purple_800"
            android:layout_marginBottom="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        <RelativeLayout
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

        
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.drawerlayout.widget.DrawerLayout>